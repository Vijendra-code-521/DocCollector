<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docType.UploadImages"
    android:orientation="vertical"
    android:id="@+id/LinearLayoutUploadImagesFragment1">
    <LinearLayout
        android:id="@+id/LinearLayoutUploadImagesFragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/UploadImagesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Images"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/ScrollViewUploadImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:id="@+id/GridLayoutUploadImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/CardViewUploadImages1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:id="@+id/LinearLayoutUploadImagesFragment3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/ImageUploadAadharCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/round_layout_yellow_new"
                        />
                    <TextView
                        android:id="@+id/InputFileNameInUploadImages"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:text="Select Document from given list"
                        android:background="@drawable/round_layout_yellow"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />



                    <Button
                        android:id="@+id/upload_btn_aadharCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/btn_round"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginStart="4dp"
                        android:textStyle="bold"/>
                    <TableRow
                        android:id="@+id/tableRowUploadImages"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="2dp"
                        android:background="#FFB300"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/selectImagetoUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="select name of document to upload"
                android:textStyle="bold"
                android:textColor="@color/teal_200"
                android:textSize="24sp"
                />

            <GridLayout
                android:id="@+id/GridLayoutInImageFragment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/adharcardUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AadharCard"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    android:textColor="#EC1616"
                    android:textSize="24sp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/PancardUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pan Card"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#EC1616"
                    android:textSize="24sp"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/VoterIdUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VoterId"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="#EC1616"
                    android:textSize="24sp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/Driving_LicenceUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DLicience"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:textColor="#EC1616"
                    android:textSize="24sp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/MarksheetUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marksheet "
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#EC1616"
                    android:textSize="24sp"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/visaUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="visa"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="#EC1616"
                    android:textSize="24sp"
                    android:textAlignment="center" />


            </GridLayout>
        </GridLayout>


    </ScrollView>

</LinearLayout>