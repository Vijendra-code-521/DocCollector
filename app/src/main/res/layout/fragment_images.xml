<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docType.Images"
    android:orientation="vertical"
    android:id="@+id/LinearLayoutImagesFragment">

    <LinearLayout
        android:id="@+id/LinearLayoutImagesFragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/imageInImageFragmentUploaded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploaded Images"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center" />
    </LinearLayout>



    <GridLayout
        android:id="@+id/GridLayoutInImageFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewInImageFragment"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:id="@+id/LinearLayoutImagesFragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/LinearLayoutImagesFragment3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/InputFileNameInDownloadImages"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text="Select Document from given list"
                    android:background="@drawable/round_layout_yellow"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
                <Button
                    android:id="@+id/download_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round"
                    android:text="@string/download"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                   />

                <Button
                    android:id="@+id/delete_image"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:textColor="@color/black"
                    android:background="@drawable/btn_round"
                    android:textSize="24sp"
                    android:textStyle="bold"
                     />

            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="2dp"
                android:background="#FFB300"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/selectImagetoDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="select name of document to download"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:textSize="24sp"
            />

    <GridLayout
        android:id="@+id/GridLayoutInImageFragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/adharcardUploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AadharCard"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:textColor="#EC1616"
                android:textSize="24sp"
                android:textAlignment="center" />

        <TextView
            android:id="@+id/PancardUploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pan Card"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#EC1616"
            android:textSize="24sp"
            android:textAlignment="center" />
        <TextView
        android:id="@+id/VoterIdUploaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VoterId"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#EC1616"
        android:textSize="24sp"
        android:textAlignment="center" />

        <TextView
            android:id="@+id/Driving_Licence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DLicience"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:textColor="#EC1616"
            android:textSize="24sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Marksheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marksheet"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#EC1616"
            android:textSize="24sp"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="visa"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#EC1616"
            android:textSize="24sp"
            android:textAlignment="center" />


    </GridLayout>
    </GridLayout>



</LinearLayout>